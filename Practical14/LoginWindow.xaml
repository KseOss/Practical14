<Window x:Class="Practical14.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practical14"
        mc:Ignorable="d"
        Title="Авторизация" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Введите пароль:" Margin="0,0,0,10"/>
            <!-- Подсказка для ввода пароля -->
            <PasswordBox Name="PasswordBox" Margin="0,0,0,10"/>
            <!-- Поле для ввода пароля -->
            <Button Content="Войти" Click="LoginButton_Click"/>
            <!-- Кнопка для подтверждения ввода пароля -->
        </StackPanel>
    </Grid>
</Window>
